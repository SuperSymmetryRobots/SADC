<!-- -->
<launch>

  <arg name="demo" default="seat_car"/>
  <arg name="gui"  default="true"/>
  <arg name="x"   default="0.0"/>
  <arg name="y"   default="0.0"/>
  <arg name="yaw" default="0.0"/>

  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find seat_car_gazebo)/worlds/$(arg demo).world"/>
<!--    <arg name="use_sim_time" value="true"/>-->
<!--    <arg name="paused" value="true"/>-->
    <arg name="gui" value="$(arg gui)"/>
  </include>

  <include file="$(find seat_car_description)/launch/seat_car_description.launch"/>

  <!-- Spawn a robot into Gazebo -->
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" 
        args="-param robot_description -urdf -model seat_car -x $(arg x) -y $(arg y) -z 0.04 -R 0 -P 0 -Y $(arg yaw) "/>
  
  <node name="car_world_tf" pkg="tf" type="static_transform_publisher"
        args="$(arg x) $(arg y) 0.04 $(arg yaw) 0 0 world odom 100"/>

</launch>

